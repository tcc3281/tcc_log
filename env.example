# =============================================================================
# TCC LOG - AI-POWERED LEARNING JOURNAL
# Environment Configuration Template
# Copy this file to .env and update with your actual values
# =============================================================================

# ===== DATABASE CONFIGURATION =====
# PostgreSQL connection string for main database
DATABASE_URL=postgresql+psycopg2://username:password@localhost:5432/tcc_log

# Test database (separate from main database)
TEST_DATABASE_URL=postgresql+psycopg2://username:password@localhost:5432/tcc_log_test

# Alternative: SQLite for development (uncomment if using SQLite)
# DATABASE_URL=sqlite:///./tcc_log.db
# TEST_DATABASE_URL=sqlite:///./test_tcc_log.db

# ===== SECURITY & AUTHENTICATION =====
# Secret key for JWT token signing (generate a secure random string)
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT algorithm
ALGORITHM=HS256

# Token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password hashing settings
PWD_CONTEXT_SCHEMES=bcrypt
PWD_CONTEXT_DEPRECATED=auto

# ===== AI CONFIGURATION =====
# OpenAI API configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7

# LM Studio local AI server configuration
LM_STUDIO_BASE_URL=http://localhost:1234/v1
LM_STUDIO_API_KEY=lm-studio
LM_STUDIO_MODEL=llama-2-7b-chat
LM_STUDIO_MAX_TOKENS=2048
LM_STUDIO_TEMPERATURE=0.7

# AI Features toggle
ENABLE_AI_CHAT=true
ENABLE_AI_ANALYSIS=true
ENABLE_AI_WRITING_ASSISTANT=true
ENABLE_SEMANTIC_SEARCH=true

# ===== FILE UPLOAD CONFIGURATION =====
# Upload directory path (relative to project root)
UPLOAD_DIR=uploads

# Maximum file size in bytes (10MB default)
MAX_FILE_SIZE=10485760

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.txt,.md

# Profile image settings
PROFILE_IMAGE_MAX_SIZE=2097152  # 2MB
PROFILE_IMAGE_EXTENSIONS=.jpg,.jpeg,.png

# ===== APPLICATION SETTINGS =====
# Application name and version
APP_NAME=TCC Log
APP_VERSION=1.0.0
APP_DESCRIPTION=AI-Powered Learning Journal

# API settings
API_V1_STR=/api/v1
PROJECT_NAME=TCC Log API

# CORS settings (comma-separated URLs)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===== DEVELOPMENT SETTINGS =====
# Environment mode
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Enable API documentation
ENABLE_DOCS=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ===== EMAIL CONFIGURATION =====
# Email settings for notifications (optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Email templates
EMAILS_FROM_EMAIL=noreply@tcclog.com
EMAILS_FROM_NAME=TCC Log

# ===== REDIS CONFIGURATION (Optional) =====
# Redis for caching and session storage
REDIS_URL=redis://localhost:6379/0
ENABLE_REDIS_CACHE=false

# ===== MONITORING & ANALYTICS =====
# Application monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# Analytics
GOOGLE_ANALYTICS_ID=your-ga-id
ENABLE_ANALYTICS=false

# ===== BACKUP & MAINTENANCE =====
# Automatic backup settings
ENABLE_AUTO_BACKUP=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# ===== RATE LIMITING =====
# API rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ===== FRONTEND INTEGRATION =====
# Frontend URL for CORS and redirects
FRONTEND_URL=http://localhost:3000

# API base URL (usually same as backend)
API_BASE_URL=http://localhost:8000

# ===== THIRD-PARTY INTEGRATIONS =====
# GitHub integration (for future features)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google OAuth (for future features)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ===== ADVANCED AI SETTINGS =====
# Vector database settings for semantic search
VECTOR_DIMENSION=1536
VECTOR_SIMILARITY_THRESHOLD=0.8

# AI model switching
PRIMARY_AI_PROVIDER=lm_studio  # or openai
FALLBACK_AI_PROVIDER=openai

# Model performance monitoring
AI_RESPONSE_TIMEOUT=30
AI_MAX_RETRIES=3

# ===== SECURITY HEADERS =====
# Security headers configuration
ENABLE_SECURITY_HEADERS=true
CONTENT_SECURITY_POLICY=default-src 'self'
FRAME_OPTIONS=DENY
CONTENT_TYPE_OPTIONS=nosniff

# ===== FEATURE FLAGS =====
# Enable/disable specific features
FEATURE_USER_REGISTRATION=true
FEATURE_FILE_UPLOAD=true
FEATURE_TOPIC_HIERARCHY=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_EXPORT_DATA=true

# ===== DATABASE OPTIMIZATION =====
# Connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Query optimization
DB_ECHO_QUERIES=false
DB_ENABLE_QUERY_CACHE=true
